#!/bin/bash

host="$1"

if [[ "$host" == "" ]]; then
    echo "usage: $0 [user@]hostname"
    exit 1
fi

hostname=$(ssh "$host" "hostname")

if [[ "$hostname" == "teslon" ]]; then
    ssh -C -t -L "localhost:11111:$hostname:11111" "$host" "bash -lc 'module load mpi/openmpi-x86_64 paraview && mpirun -np 4 pvserver -display :0'"
else
    ssh -C -t -L "localhost:11111:$hostname:11111" "$host" "mpirun -np 2 pvserver -display :0"
fi
